auto-reload             yes
suppress-first-reload   yes
confirm-exit            yes
confirm-mark-feed-read  no
cleanup-on-quit         no
goto-next-feed          no
browser                 "weblauncher %u"
cache-file              ~/.newsboat/cache.db
error-log               ~/.newsboat/error.log
scrolloff               2

ignore-mode    "download"
ignore-article "exec:~/.newsboat/feeds/twitch-rss -n 50 'Software and Game Development'" "title !~ \"lisp|ocaml|pascal|erlang|elixir|haskell|prolog|fsharp|f\#|scala|gentoo|guix|freebsd|openbsd|netbsd\""
ignore-article "https://www.reddit.com/r/manga/new/.rss" "title !~ \"\[DISC\] ((administrator kang jin lee)|(peerless dad)|(one punch man)|(the beggining after the end)|(mushoku tensei))\""
ignore-article "exec:4chan-rss -b g -n 25 -p 2" "title =~ \"/sdg/|/pcbg/|/sqt/|/tpg/|/fglt/|/ptg/|/hpg/|/iemg/|/bst/|/mkg/|/aicg/\""
ignore-article "https://www.reddit.com/r/Destiny/.rss" "content =~ \"preview.redd.it|www.reddit.com/gallery/|b.thumbs.redditmedia.com\""

#
# Bookmarking
#
bookmark-autopilot yes
bookmark-cmd /usr/local/share/doc/newsboat/examples/example-bookmark-plugin.sh
bookmark-interactive no

#
# Networking
#
reload-threads          1
reload-time            45
download-timeout       60
download-retries        4
proxy                  127.0.0.1:9050
proxy-type             socks5
use-proxy              yes

#
# Keybindings
#
unbind-key Q
bind-key ESC hard-quit

bind-key M-v pageup
bind-key ^V pagedown
bind-key j down      feedlist
bind-key k up        feedlist
bind-key j next      articlelist
bind-key k prev      articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key j down      article
bind-key k up        article

#
# Theme
#
color listnormal        default default
color listnormal_unread default default
color listfocus         default default reverse bold
color listfocus_unread  default default reverse bold
color info              default default #reverse
color background        default default
color article           default default

#
# Macros
#
